<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta http-equiv="X-UA-Compatible" content="IE=edge">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <meta name="color-scheme" content="light dark">
  <title>Upload</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-dark-5@1.1.3/dist/css/bootstrap-dark.min.css" rel="stylesheet">

</head>
<body class="bg-dark">
  <% if (locals.fileLink != null) { %>
    <div class="alert alert-primary">
      Your file is uploaded
      <a href="<%= locals.fileLink %>"><%= locals.fileLink %></a>
    </div>
  <% } %>

  <div class="h-100 d-flex align-items-center justify-content-center">
  <form action="/upload" method="post" enctype="multipart/form-data" class="p-4 w-100 ">
    <div class="form-group flex-grow-0 col-sm-3">
      <label for="file" class="form-label text-white">File:</label>
      <input type="file" id="file" name="file" class="form-control file-input" required />
    </div>
    <div class="form-group col-sm-3">
      <label for="password" class="form-label text-white">Password:</label>
      <input type="password" id="password" name="password" class="form-control" required/>
    </div>
    <div class="form-group col-sm-3" id="maxDownloadDiv">
      <label for="maxDownloads" class="form-label text-white">Max Downloads:</label>
      <input type="number"  id="maxDownload" name="maxDownload" pattern="[0-9]" min="1" max="2000000" class="form-control" required/>
    </div>

    <div class="form-check col-sm-3">
      <label class="form-check-label" for="unlimitedDownloads">Unlimited Downloads</label>
      <input type="checkbox" id="unlimitedDownloads" name="unlimitedDownloads" class="form-check-input form-control">
    </div>
    <div class="form-group col-sm-3">
      <button class="btn btn-primary" type="submit">Share</button>
    </div>
    </div>
  </form>
  <script>
    var checkbox = document.getElementById("unlimitedDownloads");
    var maxDownloadDiv = document.getElementById("maxDownloadDiv");
    var maxDownload = document.getElementById("maxDownload")
    checkbox.addEventListener('change', e => {
    if (e.target.checked === true){
      maxDownloadDiv.style.display = "none"
      maxDownload.value = 900000
    } else {
      maxDownloadDiv.style.display = "block"
      maxDownload.value = 1
    }
  });
  </script>
</body>
</html>
